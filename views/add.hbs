<h1>Add a new course</h1>
<form action="/add" method="post">
    <div class="input-field">
          <input id="title" type="text" class="validate" name="title" required>
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Wrong name"></span>
    </div>

    <div class="input-field">
          <input id="price" type="number" class="validate" name="price" required min="10">
          <label for="price">Price</label>
          <span class="helper-text" data-error="Wrong price"></span>
    </div>

    <div class="input-field">
          <input id="image" type="text" class="validate" name="img" required>
          <label for="image">Image URL</label>
          <span class="helper-text" data-error="Wrong URL"></span>
    </div>

    <button class="waves-effect waves-red red lighten-2 btn-large" type="submit">Submit</button>
</form>