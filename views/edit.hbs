<h1>Edit {{course.title}} course</h1>
<form action="/courses/edit" method="post">
    <div class="input-field">
          <input id="title" type="text" class="validate" name="title" required value="{{course.title}}">
          <label for="title">Course name</label>
          <span class="helper-text" data-error="Wrong name"></span>
    </div>

    <div class="input-field">
          <input id="price" type="number" class="validate" name="price" required min="10" value="{{course.price}}">
          <label for="price">Price</label>
          <span class="helper-text" data-error="Wrong price"></span>
    </div>

    <div class="input-field">
          <input id="image" type="text" class="validate" name="img" value="{{course.img}}" required>
          <label for="image">Image URL</label>
          <span class="helper-text" data-error="Wrong URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    
    <button class="waves-effect waves-red red lighten-2 btn-large" type="submit">Submit</button>
</form>