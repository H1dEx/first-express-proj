<h1>Shopping Card</h1>

<div id="card">
    {{#if card.courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each card.courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td><button class="waves-effect waves-red red lighten-2 btn-small js-remove" data-id="{{id}}">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong class="totalPrice">Price: </strong> <span class="price">{{card.totalPrice}}</span></p>
        {{else}}
            <p>Card is empty</p>
{{/if}}
</div>